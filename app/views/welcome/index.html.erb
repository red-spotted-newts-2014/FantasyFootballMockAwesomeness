<dialog class="modal" id="questionaire">
  <h2>Draft Questionnaire</h2>
    <%= form_for :draft, url: {action: "questionnaire"} do |f| %>
      <%= f.label :player_name %><br>
      <%= f.text_field :player_name %><br>
      <%= f.label :number_of_rounds %> <br>
      <%= f.label 8 %>
      <%= f.radio_button(:number_of_rounds, 8) %>
      <%= f.label 10 %>
      <%= f.radio_button(:number_of_rounds, 10) %>
      <%= f.label 12 %>
      <%= f.radio_button(:number_of_rounds, 12) %>
      <br><br>
      <%= f.label :number_of_players %> <br>
      <%= f.label 8 %>
      <%= f.radio_button(:number_of_players, 8) %>
      <%= f.label 10 %>
      <%= f.radio_button(:number_of_players, 10) %>
      <%= f.label 12 %>
      <%= f.radio_button(:number_of_players, 12) %>
      <br><br>
      <%= f.submit "Submit" %>
    <% end %>
